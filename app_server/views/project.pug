extends layout

block content
    if (user)

        each project in projects
            .content
                h2=project.title
                
            if(project.tasks)
                each task in project.tasks
                    .column-left(style='width:25%')
                        p=task.title
                    .column-middle(style='width:30%')
                        h4=task.deadline
                    .column-left(style='width:25%')
                        a.button(href= '/index/project/'+ projectId + '/delete/' + task._id) Delete
                    .row
            br
            .row
            form(action="/index/project/newtask/"+ projectId, method="post", id=projectId)
                .column-left(style='width:25%')
                    input.textbox(id='title', type='text', name='title', placeholder='Task')
                .column-middle(style='width:30%')
                    input.textbox(id='deadline', type='date', name='deadline')
                .column-left(style='width:25%')
                    input.button(type='submit', value='Submit', id=projectId)  
                .row  
            br

            .row
            .content         
                a.button(href='/index/project/delete/'+projectId, id=projectId) Delete Project
                br
            br
